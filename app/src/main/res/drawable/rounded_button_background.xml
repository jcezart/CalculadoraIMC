<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Ajuste o valor do raio conforme desejado -->
            <solid android:color="@color/blue_700" /> <!-- Cor de fundo do botão quando pressionado -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" /> <!-- Ajuste o valor do raio conforme desejado -->
            <solid android:color="@color/blue_500" /> <!-- Cor de fundo padrão do botão -->
        </shape>
    </item>
</selector>